{
  "name": "ws-nodejs-re",
  "version": "1.0.0",
  "description": "work sample for nodejs developers",
  "main": "src/app.js",
  "private": true,
  "scripts": {
    "apidoc": "$(npm bin)/apidoc  -f \".*\\.js$\" -i src/ -o doc/",
    "dev": "DEBUG=ws-nodejs-re:* $(npm bin)/nodemon -L src/app.js",
    "lint": "$(npm bin)/eslint src/ config/ test/",
    "start": "node src/app.js",
    "test": "NODE_ENV=test PORT=3333 $(npm bin)/mocha --exit --recursive -R spec"
  },
  "author": "Digication",
  "license": "PRIVATE",
  "dependencies": {
    "body-parser": "~1.19.0",
    "cookie-parser": "~1.4.4",
    "debug": "~4.1.1",
    "express": "~4.17.1",
    "express-error-handler": "^1.1.0",
    "joi": "^14.3.1 ",
    "morgan": "~1.9.1",
    "path": "^0.12.7",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "sequelize": "^5.21.5",
    "sqlite3": "^4.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "mocha": "^6.2.1",
    "nodemon": "^1.19.3",
    "sequelize-fixtures": "^1.1.1"
  },
  "apidoc": {
    "name": "roster-editor API Docs",
    "version": "1.0.0",
    "description": "Documentation for the API endpoints provided by roster-editor backend",
    "title": "roster-editor API Docs",
    "url": "https://roster-editor.digication.com"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "500"
  }
}
